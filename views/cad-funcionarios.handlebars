<div id="formulario">
  <h1>Formulário de Cadastro Funcionários</h1>
  <form method="POST" action="/add-funcionario">
    <label for="cpf">CPF:</label>
    <input type="text" id="cpf" name="cpf" required>
    <br>
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" required>
    <br>
    <label for="email">E-mail:</label>
    <input type="email" id="email" name="email" required>
    <br>
    <label for="ramal">Ramal:</label>
    <input type="text" id="ramal" name="ramal" required>
    <br>
    <label for="setor">Setor:</label>
    <input type="text" id="setor" name="setor" required>
    <br>
    <input type="submit" value="Cadastrar">
  </form>
</div>

<div id="lista">
  <table id="list">
    <tr>
      <th>CPF</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Ramal</th>
      <th>Setor</th>
      <th>Ações</th>
    </tr>
    {{#each funcionario}}
    <tr>
      <td>{{CPF}}</td>
      <td>{{nome}}</td>
      <td>{{email}}</td>
      <td>{{ramal}}</td>
      <td>{{setor}}</td>
      <td>
        <div class="btn-crud" aria-label="Ações">
          <a href="/editar-funcionario/{{CPF}}" role="button">Editar</a>
          <a href="/excluir-funcionario/{{CPF}}" role="button">Excluir</a>
        </div>

      </td>
    </tr>
    {{/each}}
  </table>
</div>